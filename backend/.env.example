# Environment Configuration
NODE_ENV=production
PORT=3000
SERVER_URL=https://your-server-domain.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bettergut
DB_USER=bettergut_user
DB_PASSWORD=your-secure-database-password-here

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for American users)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@bettergut.com
FROM_NAME=BetterGut Health

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# API Configuration
API_BASE_URL=https://your-server-domain.com
CORS_ORIGIN=https://your-flutter-web-app.com,http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting (adjusted for American timezone usage)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Verification
EMAIL_VERIFICATION_SECRET=your-email-verification-secret-key
VERIFICATION_TOKEN_EXPIRES=24h

# Server Configuration for vast.ai
VAST_AI_DEPLOYMENT=true
ALLOWED_ORIGINS=*
